				MX7D_PAD_EPDC_DATA11__UART6_DCE_CTS	0x75
				MX7D_PAD_EPDC_DATA10__UART6_DCE_RTS	0x7d
			>;
		};

		pinctrl_uart7: uart7grp {
			fsl,pins = <
				MX7D_PAD_EPDC_DATA12__UART7_DCE_RX	0x7e
				MX7D_PAD_EPDC_DATA13__UART7_DCE_TX	0x76
