#include "fsl-ls1028a.dtsi"

/ {
	compatible = "tq,tqmls1028a", "fsl,ls1028a";

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_3p3v_som: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "3P3V_SOM";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
	};

	sys_mclk: clock-mclk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <25000000>;
	};
};

&esdhc1 {
	status = "okay";
	mmc-hs200-1_8v;
	mmc-hs400-1_8v;
	mmc-ddr-1_8v;
	bus-width = <8>;
};

&i2c0 {
	status = "okay";

	/* NXP SE97BTP with temperature sensor + eeprom */
	sensor0: se97@18 {
		compatible = "nxp,se97", "jedec,jc-42.4-temp";
		reg = <0x18>;
		status = "okay";
	};

	sensor1: sa56004@4c {
		compatible = "nxp,sa56004";
		reg = <0x4c>;
		vcc-supply = <&reg_3p3v_som>;
		status = "okay";
	};

	/* NXP SE97BTP with temperature sensor + eeprom */
	eeprom1: se97@50 {
		compatible = "nxp,spd";
		reg = <0x50>;
		pagesize = <16>;
		status = "okay";
	};

	rtc: pcf85063@51 {
		compatible = "nxp,pcf85063";
		reg = <0x51>;
		quartz-load-femtofarads = <12500>;
		status = "okay";
	};

	/* regular EEPROM */
	eeprom2: 24c256@57 {
		compatible = "at,24c256";
		pagesize = <32>;
		reg = <0x57>;
		status = "okay";
	};
};

&fspi {
	status = "okay";

	flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";  /* 64MB */
		reg = <0>;
		spi-max-frequency = <100000000>; /* input clock */
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			rcw@0 {
				label = "RCW";
				reg = <0x0 0x80000>;
			};

			ppa@80000 {
				label = "PPA";
				reg = <0x80000 0x80000>;
			};

			uboot@100000 {
				label = "U-Boot-PBL";
				reg = <0x100000 0x280000>;
			};

			ubootenv@380000 {
				label = "U-Boot-ENV";
				reg = <0x380000 0x80000>;
			};

			dtb@400000 {
				label = "DTB";
				reg = <0x400000 0x80000>;
			};

			hdp@480000 {
				label = "HDP";
				reg = <0x480000 0x80000>;
			};

			linux@100000 {
				label = "Linux";
				reg = <0x500000 0xA00000>;
			};

			rootfs@800000 {
				label = "RootFS";
				reg = <0xF00000 0x3100000>;
			};
		};
	};
};

&dspi2 {
	bus-num = <2>;
	status = "okay";

	spidev@0 {
		compatible = "rohm,dh2228fv";
		reg = <0>;
		spi-max-frequency = <2000000>;
		fsl,spi-cs-sck-delay = <1000000>;
		fsl,spi-sck-cs-delay = <50>;
	};
};
