#include "../freescale/fsl-ls1028a.dtsi"

/ {
	model = "TQMLS1028A module";
	compatible = "tq,tqmls1028a", "fsl,ls1028a";

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_3p3v_som: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "3P3V_SOM";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
	};

	sys_mclk: clock-mclk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <25000000>;
	};
};

&esdhc {
	status = "okay";
	sd-uhs-sdr104;
	sd-uhs-sdr50;
	sd-uhs-sdr25;
	sd-uhs-sdr12;
};

&esdhc1 {
	status = "okay";
	mmc-hs200-1_8v;
};

&i2c0 {
	status = "okay";

	/* NXP SE97BTP with temperature sensor + eeprom */
	sensor0: se97@18 {
		compatible = "nxp,se97", "jedec,jc-42.4-temp";
		reg = <0x18>;
		status = "okay";
	};

	sensor1: sa56004@4c {
		compatible = "nxp,sa56004";
		reg = <0x4c>;
		vcc-supply = <&reg_3p3v_som>;
		status = "okay";
	};

	/* NXP SE97BTP with temperature sensor + eeprom */
	eeprom1: se97@50 {
		compatible = "nxp,spd";
		reg = <0x50>;
		pagesize = <16>;
		status = "okay";
	};

	rtc: pcf85063@51 {
		compatible = "nxp,pcf85063";
		nxp,quartz_load = "12.5pF";
		nxp,offset = <0x80>;
		reg = <0x51>;
		status = "okay";
	};

	/* regular EEPROM */
	eeprom2: 24c256@57 {
		compatible = "at,24c256";
		pagesize = <32>;
		reg = <0x57>;
		status = "okay";
	};
};

&fspi {
	status = "okay";

	flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "n25q128a13", "jedec,spi-nor";  /* 16MB */
		reg = <0>;
		spi-max-frequency = <1000000>; /* input clock */
	};

	flash@1 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "n25q128a13", "jedec,spi-nor";  /* 16MB */
		reg = <1>;
		spi-max-frequency = <1000000>; /* input clock */
	};

};
